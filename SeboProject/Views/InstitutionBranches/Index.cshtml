@model IEnumerable<SeboProject.Models.InstitutionBranch>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions  no-color">
        <p>Filter:  <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"/>
            <input type="submit" value="Search" class="btn  btn-default"/>  |
            <a asp-action="Index">All Records</a>
        </p>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["Institution"]">@Html.DisplayNameFor(model => model.Institution)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["Branch"]"> @Html.DisplayNameFor(model => model.InstitutionBranchName)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Institution.InstitutionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstitutionBranchName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InstitutionBranchId" class="btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InstitutionBranchId" class="btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InstitutionBranchId" class="btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

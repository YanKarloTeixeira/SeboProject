@model IEnumerable<SeboProject.Models.Course>

@{
    ViewData["Title"] = "Index";

}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["Institution"]"> @Html.DisplayNameFor(model => model.Institution)</a>
            </th>
            <th>
               <a asp-action="Index" asp-route-sortOrder="@ViewData["StudyArea"]"> @Html.DisplayNameFor(model => model.StudyArea)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CourseName"]"> @Html.DisplayNameFor(model => model.CourseName)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Institution.InstitutionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudyArea.StudyAreaName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CourseId" class="btn-info">Details</a>|
                    <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
